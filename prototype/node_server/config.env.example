# Example config.env file for development (DO NOT commit real secrets)
# Copy this to config.env and fill in real values in your local dev environment

# Server Port
PORT=3000

# SharePoint Online Configuration
SHAREPOINT_ONLINE_SITE_URL="https://<YOUR_TENANT>.sharepoint.com/sites/<SITE_NAME>"
SHAREPOINT_ONLINE_CLIENT_ID="<YOUR_CLIENT_ID>"
SHAREPOINT_ONLINE_CLIENT_SECRET="<YOUR_CLIENT_SECRET>"
SHAREPOINT_ONLINE_TENANT_ID="<YOUR_TENANT_ID>"
SHAREPOINT_ONLINE_LIST_NAME="ISV Change Requests"

# SMTP Configuration for Email Notifications
SMTP_HOST="smtp.office365.com"
SMTP_PORT="587"
SMTP_USER="<SMTP_USERNAME>"
SMTP_PASS="<SMTP_PASSWORD>"
SMTP_FROM_EMAIL="<FROM_EMAIL_ADDRESS>"

# NOTE: Do not commit secrets. Use Azure App Service application settings or Azure Key Vault in production.